<div class="container mt-5">
<div class=" d-flex justify-content-between"><h3> User Details</h3>
<a href="/admin/adduser"><button type="button" class="btn btn-primary float-end">Add User</button></a>
</div>
<table id="table_id" class="display ">
    <thead>
        <tr>
            <th>Name </th>
            <th>Email</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        {{#each data}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
     <td >
       <a href="/admin/edituser/{{this._id}}"><button type="button" class="btn btn-primary" >Edit</button></a>
      <a href="/admin/delete-user/{{this._id}}"><button type="button" class="btn btn-danger" onclick="return confirm('Are sure you want to delete {{this.name}}')">Delete</button></a>
      </td>
    </tr>
    {{/each}}
       
    </tbody>
</table>



